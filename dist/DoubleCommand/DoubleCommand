#!/bin/sh

# Load script for DoubleCommand kernel extension.
# 
# $Id$

# Edit this value to configure DoubleCommand
config_value=1

argument="$1"
kextload=/sbin/kextload
kextunload=/sbin/kextunload
sysctl=/usr/sbin/sysctl
config_var=dc.config

if [ -z "$argument" ]; then
	argument=start
fi

case "$argument" in
	start)
		echo "Loading DoubleCommand"
		$kextload /Library/StartupItems/DoubleCommand/DoubleCommand.kext
		$sysctl -w $config_var=$config_value
	;;
	stop)
		echo "Unloading DoubleCommand"
		$kextunload /Library/StartupItems/DoubleCommand/DoubleCommand.kext
	;;
	*)
		echo "Usage: $0 {start|stop}"
		exit 1
	;;
esac
